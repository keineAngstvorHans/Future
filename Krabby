#include <Servo.h>

Servo rvh; 
Servo rvv;
Servo rhh;
Servo rhv;
Servo lhh;
Servo lhv;
Servo lvh;
Servo lvv;
// create servo object to control a servo
// twelve servo objects can be created on most boards

int pos = 90;    // variable to store the servo position
boolean eventlaufen;
int i =175;
int j = 135;
int o=5;
int l=45;
int k=0;
int x;
void setup() {
  Serial.begin(9600);
  rvh.attach(3);
  delay(200);
  rvv.attach(2);
  delay(200);
  rhv.attach(4);
  delay(200);
  rhh.attach(5);
  delay(200);
  lhv.attach(8);
  delay(200);
  lhh.attach(9);
  delay(200);
  lvv.attach(6);
  delay(200);
  lvh.attach(7);
  delay(1000);
  eventlaufen= true;
  // attaches the servo on pin 9 to the servo object


//0 stand auf 90grad
    rvh.write(pos);
    rvv.write(pos);
    rhh.write(pos);
    rhv.write(pos);
    lhh.write(pos);
    lhv.write(pos);
    lvh.write(pos);
    lvv.write(pos);
delay(1000);

