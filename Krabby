}

void laufenv(int x){
//laufen 0
for(k=1; k<=x; k+=1){

rvv.write(i);
  rvh.write(o);
  delay(150); 




  
    rvh.write(pos);
    rvv.write(pos);
    rhh.write(pos);
    rhv.write(pos);
    lhh.write(pos);
    lhv.write(pos);
    lvh.write(pos);
    lvv.write(pos);
    delay(150);
}

}


void stehen(int x){
  
//laufen 0
for(k=1; k<=x; k+=1){
  //links vorne
  rvv.write(i);
  delay(150);
    rvh.write(j);
      delay(150);
    rvv.write(j);
    delay(150);
    rvh.write(l);
      delay(150);
      rvv.write(i);
      delay(150);
}
for(k=1; k<=x; k+=1){
  //rechts vorne
    lvh.write(l);
      delay(150);
    lvv.write(j);
      delay(150);
    lvh.write(j);
      delay(150);
    lvv.write(i);
      delay(150);
}
for(k=1; k<=x; k+=1){
  //links hinten
    rhv.write(j);
    delay(150);
    rhh.write(l);
    delay(150);
    rhv.write(i);
    delay(150);
    rhh.write(j);
    delay(150);
}
for(k=1; k<=x; k+=1){
  //rechts hinten
    lhv.write(j);
    delay(150);
    lhh.write(j);
    delay(150);
    lhv.write(i);
    delay(150);
    lhh.write(l);
    delay(150);
}

delay(500);

/*for(k=1; k<=x; k+=1){
  //rechte seite hinten
    lhh.write(j);
    lhv.write(j);
    delay(1500);
    lhv.write(i);
    lvh.write(j);
    delay(1500);
    lhv.write(i);
    lvv.write(j);
    delay(1500);
    lhh.write(l);
    lvv.write(i);
    delay(1500);
}
*/
}


void laufen(int x){
  Serial.print("laufe: "+ x);
  delay(10);

//laufen alles
for(k=0; k<=x; k+=1){
    lvh.write(i);
    lvv.write(i);
    lhh.write(i);
    lhv.write(i);
    rvh.write(o);
    rvv.write(i);
    rhh.write(o);
    rhv.write(i);
      delay(400);
    lvh.write(o);
    lvv.write(o);
    lhh.write(o);
    lhv.write(o);
    rvh.write(i);
    rvv.write(o);
    rhh.write(i);
    rhv.write(o);
      delay(400);
    lvh.write(i);
    lvv.write(i);
    lvh.write(o);
    lhh.write(i);
    lhv.write(i);
    lhh.write(o);
    rvh.write(i);
    rvv.write(i);
    rvh.write(i);
    rhh.write(i);
    rhv.write(i);
    rhh.write(i);        
      delay(400); 
}  
}


void loop() {

stehen(1);
  laufenv(0);
  

  if( eventlaufen == true){
   
      Serial.println("loop event true");
      delay(100);
  }
  





  if( eventlaufen == false){
    
  
  for (pos = 0; pos <= 180; pos += 1) { // goes from 0 degrees to 180 degrees
    // in steps of 1 degree
    rvh.write(pos);
    rvv.write(pos);
    rhh.write(pos);
    rhv.write(pos);
    lhh.write(pos);
    lhv.write(pos);
    lvh.write(pos);
    lvv.write(pos);
    // tell servo to go to position in variable 'pos'
    delay(15);                       // waits 15ms for the servo to reach the position
  }
  for (pos = 180; pos >= 0; pos -= 1) { // goes from 180 degrees to 0 degrees
    rvh.write(pos);
    rvv.write(pos);
    rhh.write(pos);
    rhv.write(pos);
    lhh.write(pos);
    lhv.write(pos);
    lvh.write(pos);
    lvv.write(pos);              // tell servo to go to position in variable 'pos'
    delay(15);                       // waits 15ms for the servo to reach the position
  }

  }
  
}
